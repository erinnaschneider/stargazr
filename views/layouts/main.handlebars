<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>StarGazr</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script>
    function getUsers() {
      let response = fetch('https://api.nasa.gov/planetary/apod?api_key=xxx9LDgOuflA1McH44KMpOFFFakQgKtGQfzqCBRK').then(function (response) {
        if (response.ok) {
          response.json().then(function (data) {
            console.log(data.url);
            var url = data.url;
            var image = document.querySelector('#nasa-image');
            image.setAttribute("src", url);
          });
        }
      });
    }
    getUsers();
  </script>
</head>


<body>
    <header>
      <div id='header-image'>
        <img id='nasa-image'>
      </div>
      <h1>
        <a href="/">StarGazr</a>
      </h1>

      <nav>
        {{#if loggedIn}}
        <a href="/dashboard">dashboard</a>
        <button id="logout" class="btn-no-style">logout</button>
        {{else}}
        <a href="/login">login</a>
        {{/if}}
      </nav>

    </header>
    <main>
      <h1>
      </h1>
      {{{ body }}}
    </main>
    <footer>
      <h2>Stargazers Unite!</h2>
    </footer>

  {{#if loggedIn}}
  <script src="/javascript/logout.js"></script>
  {{/if}}
</body>

</html>